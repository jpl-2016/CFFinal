<p id="notice"><%= notice %></p>

<h1>Listing Treasurers</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Prefix</th>
      <th>Firstname</th>
      <th>Mi</th>
      <th>Lastname</th>
      <th>Alias</th>
      <th>Suffix</th>
      <th>Phone</th>
      <th>Extension</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @treasurers.each do |treasurer| %>
      <tr>
        <td><%= treasurer.address_id %></td>
        <td><%= treasurer.prefix_id %></td>
        <td><%= treasurer.firstname %></td>
        <td><%= treasurer.mi %></td>
        <td><%= treasurer.lastname %></td>
        <td><%= treasurer.alias %></td>
        <td><%= treasurer.suffix %></td>
        <td><%= treasurer.phone %></td>
        <td><%= treasurer.extension %></td>
        <td><%= link_to 'Show', treasurer %></td>
        <td><%= link_to 'Edit', edit_treasurer_path(treasurer) %></td>
        <td><%= link_to 'Destroy', treasurer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

