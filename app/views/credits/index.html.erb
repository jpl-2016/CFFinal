<p id="notice"><%= notice %></p>

<h1>Listing Credits</h1>

<table>
  <thead>
    <tr>
      <th>Campaign finance info</th>
      <th>Entity</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Purpose</th>
      <th>Isreturnedtofiler</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credits.each do |credit| %>
      <tr>
        <td><%= credit.campaign_finance_info_id %></td>
        <td><%= credit.entity_id %></td>
        <td><%= credit.date %></td>
        <td><%= credit.amount %></td>
        <td><%= credit.purpose %></td>
        <td><%= credit.isreturnedtofiler %></td>
        <td><%= link_to 'Show', credit %></td>
        <td><%= link_to 'Edit', edit_credit_path(credit) %></td>
        <td><%= link_to 'Destroy', credit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

