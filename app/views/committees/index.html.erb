<p id="notice"><%= notice %></p>

<h1>Listing Committees</h1>

<table>
  <thead>
    <tr>
      <th>Treasurer</th>
      <th>Committee type</th>
      <th>Address</th>
      <th>Committeename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
        <td><%= committee.treasurer_id %></td>
        <td><%= committee.committee_type_id %></td>
        <td><%= committee.address_id %></td>
        <td><%= committee.committeename %></td>
        <td><%= link_to 'Show', committee %></td>
        <td><%= link_to 'Edit', edit_committee_path(committee) %></td>
        <td><%= link_to 'Destroy', committee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

