<div class="nested-fields">
  <div class="field">
    <%= f.label :campaign_finance_info_id %><br>
    <%= f.number_field :campaign_finance_info_id %>
  </div>
  <div class="field">
    <%= f.label :contribution_type_id %><br>
    <%= f.collection_select :contribution_type_id, ContributionType.all, :id, :type %>
  </div>
  <div id="Entity">
    <%= f.fields_for :entities do |entity| %>
        <%= render 'entity_fields', f: entity %>
    <% end %>
  </div></br>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :isoutofstatepac %><br>
    <%= f.check_box :isoutofstatepac %>
  </div>
  <div class="field">
    <%= f.label :pacid %><br>
    <%= f.text_field :pacid %>
  </div>
  <div class="field">
    <%= f.label :istraveloutsideoftx %><br>
    <%= f.check_box :istraveloutsideoftx %>
  </div>
</div>