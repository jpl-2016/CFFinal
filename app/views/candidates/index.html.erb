<p id="notice"><%= notice %></p>

<h1>Listing Candidates</h1>

<table>
  <thead>
    <tr>
      <th>Filer</th>
      <th>Prefix</th>
      <th>Office held</th>
      <th>Office sought</th>
      <th>Address</th>
      <th>Firstname</th>
      <th>Mi</th>
      <th>Lastname</th>
      <th>Alias</th>
      <th>Suffix</th>
      <th>Phone</th>
      <th>Extension</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.filer_id %></td>
        <td><%= candidate.prefix_id %></td>
        <td><%= candidate.office_held_id %></td>
        <td><%= candidate.office_sought_id %></td>
        <td><%= candidate.address_id %></td>
        <td><%= candidate.firstname %></td>
        <td><%= candidate.mi %></td>
        <td><%= candidate.lastname %></td>
        <td><%= candidate.alias %></td>
        <td><%= candidate.suffix %></td>
        <td><%= candidate.phone %></td>
        <td><%= candidate.extension %></td>
        <td><%= link_to 'Show', candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

