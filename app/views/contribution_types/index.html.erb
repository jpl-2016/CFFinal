<p id="notice"><%= notice %></p>

<h1>Listing Contribution Types</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contribution_types.each do |contribution_type| %>
      <tr>
        <td><%= contribution_type.type %></td>
        <td><%= link_to 'Show', contribution_type %></td>
        <td><%= link_to 'Edit', edit_contribution_type_path(contribution_type) %></td>
        <td><%= link_to 'Destroy', contribution_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

